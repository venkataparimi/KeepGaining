# Production Environment Variables
# Copy this file to .env.prod and fill in your actual values

# =============================================================================
# Database Configuration
# =============================================================================
DB_USER=keepgaining
DB_PASSWORD=CHANGE_ME_Strong_Password_Min_16_Chars
DB_NAME=keepgaining
DATABASE_URL=postgresql+asyncpg://keepgaining:CHANGE_ME_Strong_Password_Min_16_Chars@db:5432/keepgaining

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=CHANGE_ME_Random_String_Min_32_Characters_For_JWT_Signing
REDIS_PASSWORD=CHANGE_ME_Redis_Password_Here

# =============================================================================
# Broker API Keys
# =============================================================================

# Fyers
FYERS_API_ID=your_fyers_api_id_here
FYERS_SECRET_KEY=your_fyers_secret_key_here
FYERS_REDIRECT_URI=http://localhost:8000/brokers/fyers/callback

# Upstox
UPSTOX_API_KEY=your_upstox_api_key_here
UPSTOX_API_SECRET=your_upstox_api_secret_here
UPSTOX_REDIRECT_URI=http://localhost:8000/brokers/upstox/callback

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
APP_VERSION=1.0.0

# Frontend URL (change to your domain)
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# =============================================================================
# Service Configuration
# =============================================================================

# Backend Workers
UVICORN_WORKERS=4

# Redis
REDIS_URL=redis://:CHANGE_ME_Redis_Password_Here@redis:6379/0
REDIS_MAX_CONNECTIONS=50

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# Trading Configuration
# =============================================================================

# Risk Management
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=5000
MAX_POSITIONS=10

# Auto-start trading services (true/false)
AUTO_START_SERVICES=false

# Paper trading mode (true/false)
PAPER_TRADING=true

# =============================================================================
# Monitoring & Alerts
# =============================================================================

# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=alerts@your-domain.com

# Webhook notifications (optional)
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 0 * * *  # Daily at midnight

# =============================================================================
# SSL/TLS (uncomment when ready)
# =============================================================================
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem
# FORCE_HTTPS=true
